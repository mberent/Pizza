@model Pizzeria.Models.Pizza

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="page-header">
            <h2>Szczegóły</h2>
        </div>
        <div class="col-md-6">
            <h4>Pizza:</h4>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PriceForSmall)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PriceForSmall)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PriceForMedium)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PriceForMedium)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PriceForLarge)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PriceForLarge)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Thickness)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Thickness)
                </dd>

            </dl>
            @Html.ActionLink("Edytuj", "Edit", new { id = Model.Id }, new { @class = "btn btn-default btn-sm" })
        </div>
        <div class="col-md-6 ">
            <h4>Dodatki:</h4>
            <dl class="dl-horizontal">
                @foreach (var item in Model.PizzaToppings)
                {
                    <dt>
                        @Html.DisplayFor(modelItem => item.Name)
                    </dt>
                    <dd>
                        @Html.ActionLink("Usuń", "DeletePizzaTopping", new { id = Model.Id, toppingId = item.Id }, new { @class = "btn btn-default btn-sm" })
                    </dd>

                }
            </dl>
            @Html.ActionLink("Dodaj składnik", "AddPizzaTopping", new { id = Model.Id }, new { @class = "btn btn-default btn-sm" })
        </div>
    </div>
</div>
<br />
@Html.ActionLink("Powrót", "Index")
