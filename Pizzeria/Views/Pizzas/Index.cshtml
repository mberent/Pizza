@model IEnumerable<Pizzeria.Models.Pizza>

@{
    ViewBag.Title = "MENU";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h2>MENU</h2>
</div>
<p>
    @Html.ActionLink("Dodaj", "Create", "Pizzas", new { @class = "btn btn-default btn-large" })

    @using (Html.BeginForm("Index", "Pizzas"))
    {
        <div class="input-group">
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit">Szukaj</button>
            </span>
            <input type="text" id="search" name="search" class="form-control" placeholder="nazwa...">
        </div>
    }
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceForSmall)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceForMedium)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceForLarge)
        </th>
        <th>
            Składniki
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thickness)
        </th>
        <th>Akcje</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceForSmall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceForMedium)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceForLarge)
            </td>
            <td>
                @String.Format("ser, sos, {0}", String.Join(", ", item.PizzaToppings.Select(x => x.Name)))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thickness)
            </td>
            <td>
                <div class="btn-group btn-group-sm">
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
                </div>
            </td>
        </tr>
    }

</table>
